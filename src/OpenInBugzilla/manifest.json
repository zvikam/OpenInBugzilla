{
	"name": "Open in Bugzilla",
	"description": "Open the selected bug# in Bugzilla",
	"version": "0.9",
	"homepage_url": "https://github.com/zvikam/OpenInBugzilla",
	"permissions": [ "contextMenus", "tabs", "activeTab" ],
	"background": {
		"scripts": [ "extension.js" ]
	},
	"icons": {
		"128": "lookbug-128.png",
		"32": "lookbug-32.png",
		"16": "lookbug-16.png"
	},
	"options_page": "options.html",
	"content_security_policy": "script-src 'self' https://code.jquery.com; object-src 'self'",
	"manifest_version": 2
}
